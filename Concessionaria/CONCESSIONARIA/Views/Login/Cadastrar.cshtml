@model Concessionaria.Dominio.Login
@{    Layout = null; }

<h2>Cadastrar Login</h2>

<div>
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2" for="Logusuar">Nome de Usuário:</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Logusuar, new { htmlAttributes = new { @class = "form-control", onkeypress = "Chars('#ErroLogusuar')", onblur = "vlUsuario()" } })
                @Html.ValidationMessageFor(model => model.Logusuar, "", new { @class = "text-danger" })
                <div id="ErroLogusuar"></div>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2" for="Logsenha">Senha:</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Logsenha, new { htmlAttributes = new { @class = "form-control", onkeypress = "NumsNChars('#ErroLogsenha')", onblur = "vlSenha()" } })
                @Html.ValidationMessageFor(model => model.Logsenha, "", new { @class = "text-danger" })
                <div id="ErroLogsenha"></div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="button" value="Cadastrar" id="submit" class="btn btn-default" disabled="disabled" onclick="OpcionalJs.cadastrar()" />
            </div>
        </div>
    </div>
</div>

<div>
    <a href="#" onclick="LoginJs.voltarInicio()">Voltar</a>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
