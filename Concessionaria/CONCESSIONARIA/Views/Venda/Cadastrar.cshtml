@model Concessionaria.Dominio.Venda

@{
    ViewBag.Title = "Cadastrar";
}

<h2>Cadastrar</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Venda</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })        

        <div class="form-group">
            <label class="control-label col-md-2" for="Venvalor">Valor:</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Venvalor, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Venvalor, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="Vendatav">Data da venda:</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Vendatav, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Vendatav, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="CarPlaca">Placa:</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Carro.Carplaca, new { htmlAttributes = new { @class = "form-control" } })
                @Html.DropDownList("Carro", "Selecione")
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="Clicpf">CPF:</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Cliente.Clicpf, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Cliente.Clicpf, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Vender" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Voltar", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
