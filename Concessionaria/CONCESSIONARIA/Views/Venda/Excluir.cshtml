@model Concessionaria.Dominio.Venda

@{
    ViewBag.Title = "Excluir";
}

<h2>Excluir Venda @Html.DisplayFor(model => model.Venid)</h2>

<h3>Tem certeza que deseja excluir esta venda e o carro?</h3>
<div>
   
    <hr />
    <dl class="dl-horizontal">
        <dt>
            ID Venda:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Venid)
        </dd>

        <dt>
            Valor:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Venvalor)
        </dd>

        <dt>
            Data da venda:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Vendatav)
        </dd>

        <dt>
            Cliente:
        </dt>
        
        <dd>
            @Html.DisplayFor(model => model.Cliente.Clinome)
        </dd>

        <dt>
            Placa do carro:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Carro.Carplaca)
        </dd>

        <dt>
            Modelo do carro:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Carro.Carmodel)
        </dd>
    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Excluir" class="btn btn-default" /> |
            @Html.ActionLink("voltar", "Index")
        </div>
    }
</div>
