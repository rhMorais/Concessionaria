@model IEnumerable<Concessionaria.Dominio.Opcional>

@{
    ViewBag.Title = "Index";
}

<script src="~/Validacoes/OpcionalJS.js?d=@DateTime.Now.Ticks" type="text/javascript"></script>
<h2>Index Opcionais</h2>

<div id="divGrid">
    <p>
        <a href="#" onclick="OpcionalJs.novoCadastro('@Url.Action("Cadastrar")')">Novo Opcional</a>
        @*@Html.ActionLink("Novo Opcional", "Cadastrar")*@
    </p>
    <table class="table">
        <tr>
            <th>
                ID Opcional
            </th>
            <th>
                Descrição
            </th>
            <th></th>
        </tr>
        @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Opcid)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Opcdescr)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Editar", new { id=item.Opcid}) |
                    @Html.ActionLink("Detalhes", "Detalhes", new {id=item.Opcid}) |
                    @Html.ActionLink("Excluir", "Excluir", new { id=item.Opcid  })
                </td>
            </tr>
        }
    </table>
</div>
<div id="divDados"></div>
