@using Concessionaria.Dominio;
@model Carro
@{ ViewBag.Title = "Cadastrar Carro"; }

<h2>Cadastrar</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <label class="control-label col-md-2" for="Carplaca">Placa:</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Carplaca, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Carplaca, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="Carmodel">Modelo:</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Carmodel, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Carmodel, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="Carmarca">Marca:</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Carmarca, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Carmarca, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="Carcor">Cor:</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Carcor, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Carcor, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="Carano">Ano:</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Carano, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Carano, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="Carcombu">Combustível:</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Carcombu, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Carcombu, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="Cartipo">Tipo:</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Cartipo, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Cartipo, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="Cartipo">Opcinais:</label>
            <div class="col-md-10">
                    @foreach (var item in (IEnumerable<Opcional>)ViewBag.Opcional)
                    {
                        <input type="checkbox" name="Opcional" id="Opcional_@item.Opcid" value="@item.Opcid" /><label for="Opcional_@item.Opcid">@item.Opcdescr</label> <br>
                    }

                @*<select multiple>
                    @foreach (var item in (IEnumerable<Opcional>)ViewBag.Opcional)
                    {
                        <option value="@item.Opcid">@item.Opcdescr</option>
                    }
                </select>*@
                @*@Html.DropDownList("Opcional", "Selecione")*@
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Cadastrar" class="btn btn-default" />
            </div>
        </div>
    
    </div>        
}

<div>
    @Html.ActionLink("Voltar", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
