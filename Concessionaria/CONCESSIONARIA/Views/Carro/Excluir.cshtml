@model Concessionaria.Dominio.Carro

@{
    ViewBag.Title = "Excluir";
}

<h2>Excluir Carro</h2>

<h3>Tem certeza que deseja excluir este carro?</h3>
<p>(Caso exclua este carro, a venda vinculada a ele também será apagada)</p>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Placa:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Carplaca)
        </dd>

        <dt>
            Modelo:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Carmodel)
        </dd>

        <dt>
            Marca:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Carmarca)
        </dd>

        <dt>
            Cor:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Carcor)
        </dd>

        <dt>
            Ano:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Carano)
        </dd>

        <dt>
            Combustível:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Carcombu)
        </dd>
       
        <dt>
            Tipo:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Cartipo)
        </dd>
        <br />

        <dt>
            Opcionais:
        </dt>
        @if (Model.Caropcio != null)
        {
            foreach (var item in Model.Caropcio)
            {
                <dd>
                    @Html.DisplayFor(model => item.Opcdescr)
                </dd>
            }
        }

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Excluir" class="btn btn-default" /> |
            @Html.ActionLink("Voltar", "Index")
        </div>
    }
</div>
