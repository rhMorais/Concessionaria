                @Html.EditorFor(model => model.Carmodel, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Carmodel, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="Carmarca">Marca:</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Carmarca, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Carmarca, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="Carcor">Cor:</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Carcor, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Carcor, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="Carano">Ano:</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Carano, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Carano, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="Carcombu">Combustível:</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Carcombu, new { htmlAttributes = new { @class = "form-control" } })
