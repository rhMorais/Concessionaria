@using Concessionaria.Dominio
@model Login
@{
    ViewBag.Title = "Login";
}



<h3>Para entrar no sistema realize Login:</h3>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div name="form1" class="form-horizontal" >
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2" for="Logusuar">Usuario:</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Logusuar, new { htmlAttributes = new { @class = "form-control" }})                
                @Html.ValidationMessageFor(model => model.Logusuar, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="Logsenha">Senha:</label>
            <div class="col-md-10">
                @Html.PasswordFor(model => model.Logsenha, new { @class = "form-control"})
                @Html.ValidationMessageFor(model => model.Logsenha, "", new { @class = "text-danger" })
            </div>
        </div>

       

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Entrar" class="btn btn-default" />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}